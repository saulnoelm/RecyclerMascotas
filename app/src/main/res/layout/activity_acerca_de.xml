<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_directorio"
    tools:context=".activities.ActivityAcercaDe">

    <include android:id="@+id/miActionBar"
        layout="@layout/actionbarresumen"
        />

    <LinearLayout
        android:id="@+id/vlPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="55dp"
        >

        <TextView
            android:id="@+id/AcercaDeTitulo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:text="Acerca del programador"
            android:textSize="@dimen/text_size_titulo"
            />

        <TextView
            android:id="@+id/AcercaDe"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/infoDesarrollador"
            android:textAlignment="center"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>